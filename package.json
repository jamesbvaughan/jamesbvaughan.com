{
  "name": "jamesbvaughan.com",
  "version": "1.0.0",
  "description": "James Vaughan's personal site",
  "scripts": {
    "start": "hugo serve -D",
    "build:css": "uglifycss assets/css/* > static/css/styles.css",
    "build": "npm run build:css && hugo",
    "clean": "rm -rf public static/css/*",
    "deploy": "rsync -r --delete --info=progress2 public/* larry:/var/www/jamesbvaughan.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesbvaughan/jamesbvaughan.com.git"
  },
  "author": "James Vaughan",
  "license": "MIT",
  "homepage": "https://jamesbvaughan.com",
  "devDependencies": {
    "hugo-bin": "^0.29.0",
    "uglifycss": "0.0.29"
  }
}
